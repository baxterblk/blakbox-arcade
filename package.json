{
  "name": "blakbox-gameserver",
  "version": "1.0.0",
  "description": "Classic Game Server with Web Interface",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "games",
    "emulator",
    "retro",
    "server"
  ],
  "author": "BlakBox Game Server",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "*.js",
      "!test-upload.js",
      "!coverage/**",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true
  }
}
